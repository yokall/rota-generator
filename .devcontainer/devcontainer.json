{
    "name": "Perl Development",
    "postStartCommand": "cp .devcontainer/bash_git_prompt.sh ~/.bash_git_prompt && echo 'source ~/.bash_git_prompt' >> ~/.bashrc",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "configureGitBash": true,
            "gitBashPrompt": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "source=${localEnv:HOME}/rota-runner-key.json,target=/workspaces/rota-runner-key.json,type=bind"
    ],
    "containerEnv": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/workspaces/rota-runner-key.json"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "d9705996.perl-toolbox",
                "sfodje.perltidy"
            ]
        }
    }
}